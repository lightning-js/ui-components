{
  "name": "ui-components",
  "version": "0.1.4",
  "author": "",
  "license": "Apache-2.0",
  "private": true,
  "main": "index.js",
  "type": "module",
  "types": "dist/types.d.ts",
  "scripts": {
    "start": "echo \"Error: start has been removed. run dev:<framework> script instead.\" && exit 1",
    "dev:blits": "pnpm --filter @lightningjs/blits-ui dev",
    "dev:solid": "pnpm --filter @lightningjs/solid-ui dev",
    "lerna:version": "lerna version --no-private --conventional-commits --yes",
    "lint": "pnpm eslint . --ext .js,.ts,.jsx,.tsx",
    "lint:fix": "pnpm eslint . --ext .js,.ts,.jsx,.tsx --fix",
    "publish-packages": "pnpm --filter './src/packages/**' publish",
    "reset": "rm -rf node_modules && rm -rf src/packages/solid/node_modules && rm -rf src/sandbox/node_modules && pnpm store prune",
    "build:blits:lib": "pnpm --filter @lightningjs/solid-ui build",
    "build:blits:docs": "pnpm --filter @lightningjs/solid-ui build-storybook",
    "build:solid:lib": "pnpm --filter @lightningjs/solid-ui build-lib",
    "build:solid:docs": "pnpm --filter @lightningjs/solid-ui build-storybook",
    "sandbox:solid": "pnpm --filter solid-js-sandbox start",
    "test:solid": "pnpm --filter @lightningjs/solid-ui test",
    "test:solid:update-snapshots": "pnpm --filter @lightningjs/solid-ui test:update-snapshots",
    "test": "echo \"Error: root test script doesn't exist. run test:<framework> instead.\" && exit 1",
    "version-publish": "pnpm run lerna:version && pnpm run publish-packages"
  },
  "dependencies": {
    "@lightningjs/renderer": "^0.8.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "8.10.0",
    "eslint-plugin-jest": "^28.2.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-solid": "^0.13.2",
    "lerna": "^8.1.2",
    "prettier": "^3.2.5"
  },
  "devDependencies": {
    "@lightningjs/ui-components-theme-base": "^1.2.0",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "typescript": "^5.4.5",
    "vite": "^5.2.10",
    "vite-bundle-visualizer": "^1.1.0",
    "vite-plugin-cross-origin-isolation": "^0.1.6",
    "vite-plugin-solid": "^2.10.2"
  }
}
