import { type Component } from 'solid-js';
import { View } from '@lightningjs/solid';
import type { UIComponentProps } from '../../types/interfaces.js';
import styles from './ComponentName.styles.js';

interface ComponentNameProps extends UIComponentProps {
  // component specific props  
}

// only necessary if the component should follow the Container pattern
interface ComponentNameContainerProps extends UIComponentProps {
  // container specific props
}

const ComponentName: Component<ComponentNameProps> = props => {
  return (
    <View
      {...props}
      style={[
        props.style, //
        styles.Container.tones?.[props.tone ?? styles.tone],
        styles.Container.base
      ]}
    />
  );
};

// only necessary if the component should follow the Container pattern
const ComponentNameContainer: Component<ComponentNameContainerProps> = props => {
  return (
    <View
      {...props}
      style={[
        props.style, //
        styles.Container.tones?.[props.tone ?? styles.tone],
        styles.Container.base
      ]}
    />
  );
};

export { 
  ComponentName as default,
  ComponentNameContainer,
  type ComponentNameProps,
  type ComponentNameContainerProps
};
