{
  "compilerOptions": {
    "lib": ["ESNext", "DOM", "ES5"],
    "strict": true,
    "target": "ESNext",
    "module": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "verbatimModuleSyntax": true,
    "composite": true,
    "types": ["vite/client"],
    "noEmit": true,
    "isolatedModules": true,
    "paths": {
      "utils": ["./src/shared/utils/index.ts"]
    }
  }
}
